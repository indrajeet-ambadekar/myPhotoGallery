<div class='container'>
	<%= form_with model: @photo,:url => '/photo/add', html: { multipart: true } do |f| %>
	<%= f.hidden_field :folder_id, :value=>@current_folder %>
	<div class="field">
		<%= f.label :image %><br>
		<%= f.file_field :image %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
	<% end %>
	<div class='row'>
		<% if @myphotos != nil %>
		<% @myphotos.each do |photo| %>
		<div class='col-md-12'>
			<%= image_tag photo.image.url :micro_thumb %>
			<span><%= photo.name %></span>
			
		</div>
		<% end %>
		<% else %>
		<h1>No Files here</h1>
		<% end %>
	</div>
</div>